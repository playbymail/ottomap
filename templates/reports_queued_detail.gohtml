<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{.Page.Title}}</title>
    <script src="/js/htmx-1.9.12.min.js"></script>
</head>
<body>
<h1>Reports Queued for {{.Clan}}</h1>

{{with .QueuedReport}}
    <h2>Report {{.Name}}</h2>
    <table border="2">
        <thead>
        <tr>
            <th>Clan</th>
            <th>Name</th>
            <th>Status</th>
            <th>Uploaded</th>
            <th>Updated</th>
            <th>Checksum â‘ </th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{.Clan}}</td>
            <td>{{.Name}}</td>
            <td>{{.Status}}</td>
            <td>{{.Created}}</td>
            <td>{{.Updated}}</td>
            <td>{{.Checksum}}</td>
        </tr>
        </tbody>
    </table>

    <button hx-delete="{{.URL}}"
            hx-push-url="true"
            hx-confirm="Are you sure you want to delete this report?"
            hx-target="body">
        Delete Queued Report
    </button>
{{end}}
</body>
</html>